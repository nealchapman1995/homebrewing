	<link rel="stylesheet" type="text/css" href="/assest/style.css">
</head>
<body>
<ul class="nav nav-tabs justify-content-center">
  <li class="nav-item">
    <a class="nav-link" aria-current="page" href="/">Home</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="#">Calculations</a>
  </li>
  <li class="nav-item">
    <a class="nav-link active" href="/recipes">Recipes</a>
  </li>
</ul>

	<div class="row">
	<h1 class="text-center">New Receipe</h1>
	<div class="col-6 offset-3">
		<form action="/new" method="POST" novalidate class="validated-form">
			<div class="mb-3">
				<label class="form-label" for='name'>Name</label>
				<input class='form-control' type="text" id='name' name="recipe[name]" required>
			</div>

			<div class="mb-3">
				<label class="form-label" for='style'>style</label>
				<input class="form-control" type="text" id='style' name="recipe[style]" required>
			</div>
			<div class="mb-3">
				<label class="form-label" for='ABV'>ABV</label>
				<div class="input-group">
	  				<span class="input-group-text" id="price-label">%</span>
	  				<input type="text" class="form-control" id="price" placeholder="0" aria-label="price" aria-describedby="price-label" name="recipe[ABV]" required>
				</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for='receipe'>Recipe</label>
				<textarea class="form-control" type="text" id='receipe' name="recipe[receipe]" required></textarea>
			</div>
			<div class="mb-3">
				<label class="form-label" for='notes'>Notes</label>
				<textarea class="form-control" type="text" id='notes' name="receipe[notes]" required></textarea>
			</div>
			<div class="mb-3">
				<button class="btn btn-primary">Add Recipe</button>
			</div>
		</form>

		<h5><a href="/recipes">Back Home</a></h5>
	</div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js" integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj" crossorigin="anonymous"></script>
