<!DOCTYPE html>
<html>
<head>
	<title>Recipes</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
</head>
<body>
<ul class="nav nav-tabs justify-content-center">
  <li class="nav-item">
    <a class="nav-link" aria-current="page" href="/">Home</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="#">Calculations</a>
  </li>
  <li class="nav-item">
    <a class="nav-link active" href="recipes">Recipes</a>
  </li>
</ul>

<div class="container">
	<div class=" col-6 offset-3">
		<h1>Recipes</h1>
	</div>
</div>
<!-- for some reason EJS will only work with recipe.___  Everyother one uses recipes.____ -->
<ul>
	<% for (let recipe of recipes){%>
		<div class="card mb-3">
			<div class="row">
				<div class='col-md-8'>
					<h5 class="card-title"><%= recipe.name %></h5>
					<p class="card-text"><%= recipe.style%></p>
					<p class="card-text"> <small class="text-muted"><%= recipe.ABV %></small></p>
					<a href="/recipes/<%= recipe._id %>" class="btn btn-primary">View <%= recipe.name %></a>
				</div>
			</div>
		</div>	
	<%}%>
</ul>
</body>
</html>